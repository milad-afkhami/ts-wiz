{
  "compilerOptions": {
    "lib": ["dom", "es2017"],
    "target": "es2017",
    "module": "esnext",
    "declaration": true,
    "declarationDir": "dist/types",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {}
  },
  "include": ["./src"]
}
